upstream host_service_registry_gitlab_example {
    server 127.0.0.1:5000;
}

server {
    server_name registry.gitlab.example.com;

    include snippets/custom_errors.conf;

    #Settings for Logs
    access_log /var/log/nginx/registry.gitlab.example.com_access.log detailed;
    error_log /var/log/nginx/registry.gitlab.example.com_error.log warn;

    # Security headers
    add_header Content-Security-Policy-Report-Only "default-src 'self';" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    client_body_timeout 60s;
    location /csp-report {
    access_log /var/log/nginx/csp-violations.log;
    return 204;
    }

    # Main location
    location / {
        proxy_pass http://host_service_registry_gitlab_example;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto "https";

        proxy_set_header Connection "";
        proxy_redirect off;
        proxy_buffering off;
        proxy_request_buffering off;

        proxy_http_version 1.1;
        client_max_body_size 0;

        chunked_transfer_encoding on;

        proxy_read_timeout 900;
        proxy_connect_timeout 900;
        proxy_send_timeout 900;

    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/registry.gitlab.example.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/registry.gitlab.example.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}


server {
    if ($host = registry.gitlab.example.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name registry.gitlab.example.com;
    listen 80;
    return 404; # managed by Certbot
}

