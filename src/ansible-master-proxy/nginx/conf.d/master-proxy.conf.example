map $host $backend_http {
    example.com             http://192.168.1.101:80;
    staging.example.com     http://192.168.1.102:80;
    develop.example.com     http://192.168.1.103:80;

    default                 http://192.168.1.100:80;
}

server {
    listen 80;
    server_name _;

    location / {

        proxy_pass $backend_http;
        proxy_set_header Host $host;
    }
}
